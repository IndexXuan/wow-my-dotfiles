{
  // ref - https://github.com/neoclide/coc.nvim/blob/master/data/schema.json

  // basic
  "hover.target": "float",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.formatOnType": false,
  "colors.enable": true,
  "highlight.colors.enable": true,
  "highlight.document.enable": true,
  "workspace.rootPatterns": ["vite.config.ts", ".git"],

  // language overrides
  "[vue][json][javascript][typescript][dart][rust]": {
    "coc.preferences.formatOnSave": true
  },
  "javascript.suggestionActions.enabled": false,

  // list
  "list.previewSplitRight": true,
  "list.normalMappings": {
    "<C-j>": "normal:j",
    "<C-k>": "normal:k",
    "<C-t>": "action:tabe"
  },

  // diagnostic
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualTextPrefix": " ",
  "diagnostic.virtualText": false,

  // codeLens
  "codeLens.enable": false,
  "codeLens.separator": "‣",

  // suggest
  // make vim select first item on completion
  "suggest.noselect": false,
  // when snippet activated and pumvisible, prefer complete completion.
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.acceptSuggestionOnCommitCharacter": false,
  "suggest.snippetIndicator": "~",
  "suggest.completionItemKindLabels": {
    "color": "",
    "class": "",
    "constant": "",
    "enum": "",
    "enumMember": "",
    "event": "鬒",
    "field": "綠",
    "folder": "",
    "function": "",
    "file": "",
    "interface": "禍",
    "module": "",
    "method": "",
    "operator": "洛",
    "property": "襁",
    "keyword": "",
    "reference": "",
    "snippet": "",
    "struct": "פּ",
    "text": "",
    "typeParameter": "",
    "unit": "",
    "variable": "",
    "value": "",
    "default": ""
  },

  "snippets.extends": {
    "vue": ["javascript", "typescript", "html", "css", "scss", "less"]
  },

  // coc-eslint
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "html", "vue", "jsx", "tsx"],

  // coc-git  
  "git.branchCharacter": "",
  "git.changedDecorator": "*",
  "git.conflictedDecorator": "",
  "git.stagedDecorator": "",
  "git.untrackedDecorator": "",
  "git.virtualTextPrefix": "     ",
  "git.addGBlameToVirtualText": true,
  "git.addGBlameToBufferVar": true,

  // volar
  "volar.enable": true,
  "volar.autoClosingTags": true,
  "volar.useWorkspaceTsdk": true,

  // flutter
  "flutter.sdk.flutter-lookup": "which flutter",
  "flutter.lsp.initialization.closingLabels": true,
  "flutter.closingLabelPrefix": "/. ",
  "flutter.provider.enableSnippet": true,
  "flutter.runDevToolsAtStartup": true,
  "flutter.autoOpenDevLog": true,
  "flutter.autoHideDevLog": true,
  "flutter.openDevLogSplitCommand": "botright 30vsplit",
  "inlayHint.enable": false,

  // plugins
  "translator.engines": ["youdao"]

}
