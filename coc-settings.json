{
  // echo 信息到窗口底部，默认是顶部 preview 窗口，体验不好
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.snippetStatusText": "SNIP",
  "list.previewSplitRight": true,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.checkCurrentLine": true,
  "list.normalMappings": {
    "<C-j>": "normal:j",
    "<C-k>": "normal:k",
    "<C-t>": "action:tabe"
  },
  // make vim select first item on completion
  "suggest.noselect": false,
  // when snippet activated and pumvisible, prefer complete completion.
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.snippetIndicator": "~",
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "snippets.extends": {
    "vue": ["javascript", "typescript", "html", "css", "scss", "less"]
  },
  // coc-eslint
  "eslint.filetypes": ["javascript", "javascriptreact", "html", "typescript", "vue", "jsx", "tsx"],
  // coc-prettier
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.stylelintIntegration": true,
  // coc-git  
  "git.branchCharacter": "",
  "git.changedDecorator": "*",
  "git.conflictedDecorator": "",
  "git.stagedDecorator": "",
  "git.untrackedDecorator": "",
  "git.addGlameToVirtualText": false,
  // coc-emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  // languageserver
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
